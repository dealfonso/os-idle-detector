[Unit]
Description=OpenStack VM monitoring for detecting idle VMs

[Service]
Type=simple

# If not using "-u" option, the output will be buffered and so the logs won't be obtained in real time
ExecStart=/usr/bin/python3 -u /usr/local/bin/osidled -c /etc/osidled/osidled.conf

StandardOutput=syslog+console
StandardError=syslog+console
SyslogIdentifier=osidled
WorkingDirectory=/var/lib/osidled

[Install]
WantedBy=multi-user.target